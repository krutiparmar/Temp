<?xml version="1.0" ?> 
<project name="mavenproject2" default="war">
	<import file="pom.xml"/>
	<path id="compile.classpath">
		<fileset dir="WEB-INF/lib">
			<include name="*.jar"/>
		</fileset>
	</path>
	
	<target name="init">
		<mkdir dir="WEB-INF/build/classes"/>
		<mkdir dir="dist" />
	</target>
	
	<target name="compile" depends="init" >
		<javac destdir="WEB-INF/build/classes" debug="true" srcdir="src">
			<classpath refid="compile.classpath"/>
		</javac>
	</target>
	
	<target name="war" depends="compile">
		<war destfile="WEB-INF/mavenproject1.war" webxml="WEB-INF/web.xml">
			<fileset dir="WEB-INF"/>
			<lib dir="WEB-INF/lib"/>
			<classes dir="build/classes"/>
		</war>
	</target>
	
	<target name="clean">
		<delete dir="dist" />
		<delete dir="build" />
	</target>
	
</project>